@model IEnumerable<Sana06.Models.deer>

@{
    ViewData["Title"] = "Santa`s Raindeer";
}

<h1>Santa`s Raindeer</h1>

<p>
    <a class="link" asp-action="Create">add raindeer</a>
</p>
<table class="table table-color">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Years)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.favorite_threat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Years)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.favorite_threat)
            </td>
            <td>
                <a class="link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="link" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
